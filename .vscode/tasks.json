{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pre-commit all",
            "type": "shell",
            "command": "uv run pre-commit run --all-files",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "pytest",
            "type": "shell",
            "command": "uv run pytest --verbose --doctest-modules --ignore=user",
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}
